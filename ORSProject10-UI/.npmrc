# NPM Configuration for CI/CD
# Use legacy peer deps resolution for Angular 7
legacy-peer-deps=true

# Ignore optional dependencies that are platform-specific
optional=false

# Use production registry
registry=https://registry.npmjs.org/

# Disable progress bar for cleaner logs
progress=false

# Set timeout for package downloads
timeout=60000

# Disable strict SSL for faster installs
strict-ssl=false
